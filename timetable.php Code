    <script>
        document.getElementById('add-row').addEventListener('click', function() {
            const tbody = document.getElementById('timetable-body');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td contenteditable="true" class="editable">Day</td>
                <td contenteditable="true" class="editable">Time</td>
                <td>
                    <select class="form-select">
                        <option>CS101</option>
                        <option>MATH201</option>
                        <option>PHY301</option>
                    </select>
                </td>
                <td contenteditable="true" class="editable">Classroom</td>
                <td contenteditable="true" class="editable">Initials</td>
                <td><button class="btn btn-danger btn-sm">Delete</button></td>
            `;
            tbody.appendChild(newRow);
        });

        document.getElementById('timetable-body').addEventListener('click', function(e) {
            if (e.target.classList.contains('btn-danger')) {
                e.target.closest('tr').remove();
            }
        });
    </script>
